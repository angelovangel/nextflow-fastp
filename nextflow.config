manifest {
    author = 'Angel Angelov'
    name = 'nextflow-fastp'
    description = 'A simple fastp-MultiQC pipeline'
    homePage = 'https://github.com/angelovangel/nextflow-fastp'
    nextflowVersion = '>=19.08'
}

tower {
  accessToken = '1bb4fe59274f773ec31311f28060430566018afc'
  enabled = true
}

profiles {
    
    conda {
        process.conda = "$baseDir/environment.yml"
    }
    
    docker {
        process.container = 'aangeloo/fastp-multiqc:latest'
        docker.enabled = true
    }

    test{
        params.readsdir = "$baseDir/testdata/"
    }

}