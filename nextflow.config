manifest {
    author = 'Angel Angelov'
    name = 'nextflow-fastp'
    description = 'A simple fastp-MultiQC pipeline'
    homePage = 'https://github.com/angelovangel/nextflow-fastp'
    nextflowVersion = '>=19.08'
}

 mail {
    smtp.host = 'smtp.gmail.com'
    smtp.port = 587
    // set accordingly in in .profile or .bashrc or whatever, this is application-specific password
    smtp.user = "$GOOGLEUSER"
    smtp.password = "$GOOGLEPASS"
    smtp.auth = true
    smtp.starttls.enable = true
    smtp.starttls.required = true
}

profiles {
    
    conda {
        process.conda = "$baseDir/environment.yml"
    }
    
    docker {
        process.container = 'aangeloo/fastp-multiqc:latest'
        docker.enabled = true
    }

    test{
        params.readsdir = "$baseDir/testdata/"
    }

}